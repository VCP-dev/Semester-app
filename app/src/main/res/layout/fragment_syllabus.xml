<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Engineering math IV"
        android:layout_gravity="center"
        android:id="@+id/engmath"
        />

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Finite Automata and Formal languages"
        android:id="@+id/fin_aut"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Design and analysis of algorithms"
        android:id="@+id/design_anal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Microprocessors and controllers"
        android:id="@+id/micro"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Operating Systems"
        android:id="@+id/os"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Software Engineering"
        android:id="@+id/soft_eng"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <Button
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        android:text="Constitution of India and Professional Ethics"
        android:id="@+id/constitution"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>




</LinearLayout>